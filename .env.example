export HTTP_PROXY="http://localhost:8080"
export HTTPS_PROXY="http://localhost:8080"
# WARNING: Setting NODE_TLS_REJECT_UNAUTHORIZED to 0 disables TLS certificate verification,
# which is a security risk and should only be used for development or testing purposes.
export NODE_TLS_REJECT_UNAUTHORIZED=0

# Database file path for storing logged traffic
export DATABASE_FILE="/path/to/your/database.db"

# Comma-separated list of target domains to log
# The script will log traffic if the request host ends with any of these domains
export TARGET_DOMAINS="example.com,yourtargetdomain.com"
